<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<Tab xmlns="http://javafx.com/javafx"
     xmlns:fx="http://javafx.com/fxml"
     fx:id="tab"
     closable="false"
     fx:controller="com.kuznetsov.dictionarypc.DictionaryGroupController">

    <FlowPane fx:id="flowPane" maxWidth="Infinity" maxHeight="Infinity">

        <VBox fx:id="settings" styleClass="flow-pane" spacing="5">
            <TextField fx:id="dictName"/>
            <Button fx:id="addDictButton" text="Add dictionary"/>
            <Button fx:id="deleteGroupButton" text="Delete group"/>

            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>

        <background>
            <Background>
                <fills>
                    <BackgroundFill fill="#B0C4DE"/>
                </fills>
            </Background>
        </background>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </FlowPane>

</Tab>
