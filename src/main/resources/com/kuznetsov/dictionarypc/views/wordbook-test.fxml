<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Stage?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:id="rootStackPane"
           fx:controller="com.kuznetsov.dictionarypc.controller.WordbookTestController">

    <VBox maxHeight="Infinity" maxWidth="Infinity">
        <HBox spacing="10">
            <Button fx:id="finish" text="Finish"/>
            <Label fx:id="info" text="0 from 0" minWidth="70" minHeight="20"/>
<!--            <ProgressIndicator fx:id="progressIndicator" minWidth="20" minHeight="70" progress="0.0"/>-->
            <ProgressBar fx:id="progressBar" progress="0.0" minHeight="20" minWidth="400"/>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>

        <ScrollPane fx:id="testsScrollPane">
            <VBox fx:id="testsList">
            </VBox>
        </ScrollPane>

        <background>
            <Background>
                <fills>
                    <BackgroundFill fill="#B0C4DE"/>
                </fills>
            </Background>
        </background>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</StackPane>
