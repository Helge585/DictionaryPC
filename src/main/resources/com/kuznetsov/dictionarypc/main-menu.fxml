<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>

<?import javafx.scene.control.TextField?>
<TabPane xmlns:fx="http://javafx.com/fxml" fx:id="dictionaryGroups"
         fx:controller="com.kuznetsov.dictionarypc.MainMenuController">
    <Tab text="+" closable="false" >
        <FlowPane maxWidth="Infinity" maxHeight="Infinity" orientation="VERTICAL"
                  vgap="10" >
            <FlowPane hgap="20">
                <Label text="Название группы"/>
                <TextField fx:id="groupName"/>
            </FlowPane>
            <FlowPane maxWidth="Infinity" hgap="20">
                <Button fx:id="saveButton" text="Save"/>
            </FlowPane>

            <background>
                <Background>
                    <fills>
                        <BackgroundFill fill="#B0C4DE" />
                    </fills>
                </Background>
            </background>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </FlowPane>
    </Tab>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

</TabPane>
